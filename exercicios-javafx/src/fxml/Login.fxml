<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.LoginControlador" styleClass="login" hgap="15" vgap="15">

    <padding>
        <Insets left="40" right="40" top="40" bottom="40"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="60" prefWidth="60" halignment="right"/>
        <ColumnConstraints prefWidth="200" maxWidth="Infinity" hgrow="ALWAYS"/>
    </columnConstraints>

    <Label text="Seja bem vindo" styleClass="login-titulo" GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
    <GridPane.margin><Insets top="20" bottom="20"/></GridPane.margin>/>


    <Label text="E-mail:" styleClass="login-form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="campoEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Senha:" styleClass="login-form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="campoSenha" GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <Button text="Entrar" styleClass="login-form-botao" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#entrar" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <GridPane.margin><Insets top="20" bottom="20"/></GridPane.margin>/>
    </Button>

</GridPane>

